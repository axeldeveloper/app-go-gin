FROM golang:1.21.0-alpine3.17 AS build
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
# COPY . .
RUN go build -o main .
RUN chmod +x main

# Run stage with Alpine for debugging
FROM alpine:3.17
WORKDIR /app
COPY --from=build /app/main .

# Copiar o arquivo .env para dentro do container, se necess√°rio
COPY --from=build /app/.env .

EXPOSE 8001
CMD ["/app/main"]
